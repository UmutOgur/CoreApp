@model IEnumerable<CoreApp.Models.Course>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Home/Shared/_Layout.cshtml";
}

<div class="m-4">
    <div class="bg-success text-white p-4">
        Course List
    </div>
    <br />
    <div class="card my-2">
        <div class="card-body">
            <form method="get" id="filter">
                <div class="form-group">
                    <input name="Name" class="form-control" placeholder="Course Nane" value="@ViewBag.Name" />
                </div>
                <br />
                <div class="form-group">
                    <input name="Price" class="form-control" placeholder="Min Price" value="@ViewBag.Price" />
                </div>
                <br />
                <div class="custom-control custom-checkbox mb-2">
                    <input name="IsActive" type="checkbox" class="custom-control-input" id="IsActive" checked="@ViewBag.IsActive" />
                    <label class="custom-control-label" for="IsActive">Active</label>
                </div>
                <button class="btn btn-primary">Filter</button>
            </form>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Active</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price</td>
                    <td>@item.IsActive</td>
                    <td>
                        <form asp-action="Delete" method="post">

                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a>
                            <input type="hidden" name="id" value="@item.Id">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>

                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Create" class="btn btn-primary">
        Create
    </a>
</div>

