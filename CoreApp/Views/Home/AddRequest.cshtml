@model CoreApp.Models.Request
@{
    ViewData["Title"] = "AddRequest";
    Layout = "~/Views/Home/Shared/_Layout.cshtml";
}

<div class="bg-success text-white m-5 p-4">
    Create a Request
</div>

<form asp-action="AddRequest" method="post" class="m-5">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" asp-for="name">
    </div>
    <div class="form-group">
        <label>Email</label>
        <input class="form-control" asp-for="email">
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input class="form-control" asp-for="phone">
    </div>
    <div class="form-group">
        <label>Message</label>
        <input class="form-control" asp-for="messages">
    </div>
    <br />
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <br />
    <a asp-action="List" class="btn btn-primary">Get to List</a>
</form>
